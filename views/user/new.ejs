<%if(status === "Error") { %>
<div class="alert alert-danger" role="alert"><%=statusDescription%></div>
<% } %>
<form role="form"action="/user/new" method="post">
    <!-- This line below is to support PUT HTTP method. Works only in Express JS Server. It's cool-->

  <div class="form-group">
    <label for="txtFirstName">User Name</label>
    <input type="text" class="form-control" name="username" id="txtFirstName" placeholder="User name" value="<%= user.username %>">
  </div>
  <div class="form-group">
    <label for="txtLastName">Email</label>
    <input type="text" class="form-control" name="email" id="txtLastName" placeholder="Email" value="<%= user.email %>">
  </div>
  <div class="form-group">
    <label for="txtLastName">Password</label>
    <input type="password" class="form-control" name="password" id="txtDob" value="<%= user.password %>">
  </div>
      <p></p>
  <input type="hidden" name="id" value="<%= user.id %>"/>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
